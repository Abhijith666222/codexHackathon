+class TaskRow extends HTMLElement {
+  static get observedAttributes() {
+    return ["task-id", "title", "status", "due", "owner", "notes"];
+  }
+
+  connectedCallback() {
+    this.classList.add("task-row");
+    this.render();
+  }
+
+  attributeChangedCallback() {
+    this.render();
+  }
+
+  _statusMeta(status) {
+    const normalized = (status || "todo").toLowerCase();
+    if (normalized === "completed" || normalized === "done") {
+      return { label: "Completed", className: "is-complete" };
+    }
+    if (normalized === "in-progress" || normalized === "in progress") {
+      return { label: "In progress", className: "is-in-progress" };
+    }
+    return { label: "To do", className: "is-todo" };
+  }
+
+  render() {
+    const taskId = this.getAttribute("task-id") || "";
+    const title = this.getAttribute("title") || "Untitled task";
+    const status = this.getAttribute("status") || "todo";
+    const due = this.getAttribute("due") || "No date";
+    const owner = this.getAttribute("owner") || "Unassigned";
+    const notes = this.getAttribute("notes") || "";
+    const statusMeta = this._statusMeta(status);
+    const isCompleted =
+      statusMeta.className === "is-complete" ? "task-row--completed" : "";
+
+    this.innerHTML = `
+      <article class="task-row__card ${isCompleted}">
+        <header class="task-row__header">
+          <h3 class="task-row__title">${title}</h3>
+          <span class="task-row__status ${statusMeta.className}">
+            ${statusMeta.label}
+          </span>
+        </header>
+        <p class="task-row__meta">
+          <span>Due: ${due}</span>
+          <span>Owner: ${owner}</span>
+        </p>
+        ${notes ? `<p class="task-row__notes">${notes}</p>` : ""}
+        <action-buttons
+          actions="complete,edit,delete"
+          task-id="${taskId}"
+          task-title="${title}">
+        </action-buttons>
+      </article>
