+class TaskList extends HTMLElement {
+  static get observedAttributes() {
+    return ["section"];
+  }
+
+  constructor() {
+    super();
+    this._tasks = [];
+  }
+
+  connectedCallback() {
+    this.classList.add("task-list");
+    this.render();
+  }
+
+  set tasks(value) {
+    if (!Array.isArray(value)) {
+      this._tasks = [];
+    } else {
+      this._tasks = value;
+    }
+    this.render();
+  }
+
+  get tasks() {
+    return this._tasks;
+  }
+
+  render() {
+    this.innerHTML = "";
+
+    if (!this._tasks.length) {
+      this.innerHTML = `<p class="task-list__empty">No tasks in this section.</p>`;
+      return;
+    }
+
+    const list = document.createElement("ul");
+    list.className = "task-list__items";
+
+    for (const task of this._tasks) {
+      const row = document.createElement("li");
+      const item = document.createElement("task-row");
+
+      row.className = "task-list__entry";
+      row.appendChild(item);
+
+      item.setAttribute("task-id", task.id || "");
+      item.setAttribute("title", task.title || "Untitled task");
+      item.setAttribute("status", task.status || "todo");
+      item.setAttribute("due", task.due || "");
+      item.setAttribute("owner", task.owner || "Unassigned");
+      item.setAttribute("notes", task.notes || "");
+      list.appendChild(row);
+    }
+
+    this.appendChild(list);
+  }
+
+  get sectionName() {
+    return this.getAttribute("data-section") || "default";
+  }
+
+  getTaskCount() {
+    return this._tasks.length;
+  }
+}
+
+customElements.define("task-list", TaskList);

