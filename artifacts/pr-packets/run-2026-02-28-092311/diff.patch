+const ACTIONS = {
+  complete: {
+    label: "Mark done",
+    className: "action-buttons__button action-buttons__button--done",
+  },
+  edit: {
+    label: "Edit",
+    className: "action-buttons__button action-buttons__button--edit",
+  },
+  delete: {
+    label: "Archive",
+    className: "action-buttons__button action-buttons__button--delete",
+  },
+};
+
+class ActionButtons extends HTMLElement {
+  static get observedAttributes() {
+    return ["actions", "task-id", "task-title"];
+  }
+
+  constructor() {
+    super();
+    this._onClick = this._onClick.bind(this);
+  }
+
+  connectedCallback() {
+    this.render();
+    this.addEventListener("click", this._onClick);
+  }
+
+  disconnectedCallback() {
+    this.removeEventListener("click", this._onClick);
+  }
+
+  attributeChangedCallback() {
+    this.render();
+  }
+
+  _parseActions() {
+    const actionsAttr = this.getAttribute("actions");
+    if (!actionsAttr) {
+      return ["complete", "edit", "delete"];
+    }
+
+    return actionsAttr
+      .split(",")
+      .map((action) => action.trim())
+      .filter(Boolean)
+      .filter((action) => ACTIONS[action]);
+  }
+
+  _onClick(event) {
+    const button = event.target.closest("button[data-action]");
+    if (!button) {
+      return;
+    }
+
+    const action = button.dataset.action;
+    const taskId = this.getAttribute("task-id") || "";
+    const taskTitle = this.getAttribute("task-title") || "";
+
+    this.dispatchEvent(
+      new CustomEvent("task-action", {
+        bubbles: true,
+        composed: true,
+        detail: {
+          action,
+          taskId,
+          taskTitle,
+        },
+      }),
+    );
+  }
+
+  render() {
+    const actions = this._parseActions();
+    const buttons = actions
+      .map((action) => {
+        const actionData = ACTIONS[action];
+        return `<button type="button" data-action="${action}" class="${actionData.className}" aria-label="${actionData.label}">${actionData.label}</button>`;
+      })
+      .join("");
+
+    this.innerHTML = `<div class="action-buttons">${buttons}</div>`;
+  }
+}
+
+customElements.define("action-buttons", ActionButtons);

