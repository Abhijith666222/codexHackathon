+import "./section-header.js";
+import "./action-buttons.js";
+import "./task-row.js";
+import "./task-list.js";
+
+const tasksBySection = {
+  today: [
+    {
+      id: "t1",
+      title: "Review project kickoff notes",
+      status: "completed",
+      due: "9:00 AM",
+      owner: "Iris",
+      notes: "Collect open questions and share timeline updates.",
+    },
+    {
+      id: "t2",
+      title: "Ship reusable task row component",
+      status: "in-progress",
+      due: "11:30 AM",
+      owner: "Sam",
+      notes: "Keep data payload stable and easy to map into future APIs.",
+    },
+    {
+      id: "t3",
+      title: "Block out sprint review prep",
+      status: "todo",
+      due: "3:00 PM",
+      owner: "Nina",
+      notes: "Finalize agenda and gather demo screenshots.",
+    },
+  ],
+  upcoming: [
+    {
+      id: "u1",
+      title: "Draft user onboarding copy",
+      status: "todo",
+      due: "Tomorrow, 10:00 AM",
+      owner: "Dara",
+      notes: "Use concise action verbs and keep tone consistent.",
+    },
+    {
+      id: "u2",
+      title: "Audit task list accessibility",
+      status: "todo",
+      due: "Tomorrow, 2:00 PM",
+      owner: "Dev Team",
+      notes: "Check contrast, focus states, and keyboard interactions.",
+    },
+  ],
+};
+
+const sections = Object.keys(tasksBySection);
+
+function normalizeStatus(status) {
+  if (status === "done") {
+    return "completed";
+  }
+  return status;
+}
+
+function cloneTasks(tasks) {
+  return tasks.map((task) => ({ ...task }));
+}
+
+function getTaskList(section) {
+  return document.querySelector(`task-list[data-section="${section}"]`);
+}
+
+function getSectionHeader(section) {
+  return document.querySelector(`section-header[data-section="${section}"]`);
+}
+
+function renderSection(section) {
+  const list = getTaskList(section);
+  const header = getSectionHeader(section);
+  const sectionTasks = tasksBySection[section] || [];
+
+  if (!list || !header) {
+    return;
+  }
+
+  const preparedTasks = sectionTasks.map((task) => ({
+    ...task,
+    status: normalizeStatus(task.status),
+  }));
+  list.tasks = preparedTasks;
+  header.setAttribute("subtitle", `${preparedTasks.length} tasks`);
+}
+
+function handleTaskAction(event) {
+  const { action, taskId } = event.detail || {};
+  const list = event.currentTarget;
+  const section = list.getAttribute("data-section");
+
+  if (!section || !taskId || !tasksBySection[section]) {
+    return;
+  }
+
+  const sectionTasks = tasksBySection[section];
+  const taskIndex = sectionTasks.findIndex((task) => task.id === taskId);
+  if (taskIndex < 0) {
+    return;
+  }
+
+  if (action === "complete") {
+    const current = sectionTasks[taskIndex].status;
+    sectionTasks[taskIndex].status =
+      current === "completed" ? "todo" : "completed";
+  }
+
+  if (action === "edit") {
+    const currentTitle = sectionTasks[taskIndex].title;
+    const nextTitle = prompt(
+      `Rename task "${currentTitle}"`,
+      currentTitle,
+    );
+    if (nextTitle && nextTitle.trim()) {
+      sectionTasks[taskIndex].title = nextTitle.trim();
+    }
+  }
+
+  if (action === "delete") {
+    sectionTasks.splice(taskIndex, 1);
+  }
+
+  renderSection(section);
+}
+
+for (const section of sections) {
+  const list = getTaskList(section);
+  if (list) {
+    list.tasks = cloneTasks(tasksBySection[section]);
+    list.addEventListener("task-action", handleTaskAction);
+  }
+}
+
+for (const section of sections) {
+  renderSection(section);
+}

